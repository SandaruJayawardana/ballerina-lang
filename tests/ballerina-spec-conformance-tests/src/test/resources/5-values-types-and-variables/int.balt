public function main() {
    int x = 404;
    io:println(x); // @output 404

    int y = 0x1fe;
    io:println(y); // @output 510

    y = 0x1Fd;
    io:println(y); // @output 509

    y = 0X1fB;
    io:println(y); // @output 507

    x = y;
    io:println(x); // @output 507

    x = -9223372036854775808;
    io:println(x); // @output -9223372036854775808

    x = 9223372036854775807;
    io:println(x); // @output 9223372036854775807
}

